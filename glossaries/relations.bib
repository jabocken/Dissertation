% https://tex.stackexchange.com/a/474902 has a fix for the relation spacing issue but it doesn't work quite right (a little extra spacing in some places). Good enough for me for right now though, will tweak later if need be.

%% Shared types
@index{lattice}

@symbol{equiv,
  name = {{}\ensuremath\equiv{}},
  description = {Indicates term equivalence; the term on the left may be replaced by the term on the right}
}

% Memory relations
@symbol{separate,
  name = {{}\ensuremath\bowtie{}},
  description = {Indicates the two memory region arguments are separate},
  parent = {memory}
}
@symbol{enclosed,
  name = {{}\ensuremath\preceq{}},
  description = {Indicates the first memory region argument is enclosed in the second},
  parent = {memory}
}
@symbol{encloses,
  name = {{}\ensuremath\succeq{}},
  description = {Reverse of $\preceq$},
  see = {enclosed},
  parent = {memory}
}
@symbol{compatible,
  name = {{}\ensuremath\cong{}},
  description = {Indicates the two memory model arguments are compatible},
  parent = {memory}
}
@symbol{comparable,
  name = {{}\ensuremath{\mathrel{\mathbf{C}}}{}},
  description = {Indicates the two memory model arguments are comparable},
  parent = {memory}
}
@symbol{comparable-plus,
  name = {{}\ensuremath{\mathrel{\mathbf{C}^+}}{}},
  description = {The transitive closure of comparability},
  parent = {memory},
  seealso = {comparable}
}

%% FROM PLDI 2022 (Hoare Graph) paper
@symbol{holds,
  name = {{}\ensuremath\vdash{}},
  description = {Indicates the predicate on the \glsxtrshort{rhs} holds in the state on the \glsxtrshort{lhs}},
  parent = {state}
}
@symbol{join,
  name = {{}\ensuremath\sqcup{}},
  description = {The join of two states, predicates, or memory models},
  parent = {lattice}
}
@symbol{order,
  name = {{}\ensuremath\sqsubseteq{}},
  description = {Partial ordering over symbolic states for \glsxtrshort{hg} work where the \glsxtrshort{lhs} is ``less abstract'' than the \glsxtrshort{rhs}},
  parent = {lattice},
  seealso = {abs-state}
}
@symbol{defeq,
  name = {{}\ensuremath{\stackrel{\text{def}}{=}}{}},
  description = {For \glsxtrshortpl{hg}, used in place of \glssymbol{equiv} as that symbol is used to indicate aliasing instead},
  seealso = {alias,equiv}
}
@symbol{alias,
  name = {{}\ensuremath\equiv{}},
  description = {For \glsxtrshortpl{hg}, indicates the two memory region arguments alias},
  parent = {memory}
}
@symbol{pluseq,
  name = {{}\ensuremath{\mathrel{+}=}{}},
  description = {In-place addition}
}
@symbol{black-box-transition,
  name = {{}\ensuremath{\rightarrow_B}{}},
  description = {A deterministic black-box transition relation over concrete states for \glsxtrshortpl{hg}},
  parent = {state},
  seealso = {concrete-state}
}
@symbol{black-box-transition-star,
  name = {{}\ensuremath{\rightarrow_B^\ast}{}},
  description = {Repeated application of the black-box transition relation},
  parent = {state},
  seealso = {black-box-transition}
}
@symbol{symbolic-transition,
  name = {{}\ensuremath{\rightarrow_\Sigma}{}},
  description = {A nondeterministic transition relation over symbolic states for \glsxtrshortpl{hg}},
  parent = {state},
  seealso = {symbolic-state}
}
@symbol{related,
  name = {{}\ensuremath{\mathrel{\mathbf R}}{}},
  description = {Indicates the \glsxtrshort{lhs} is \emph{related to} the \glsxtrshort{rhs}},
  parent = {state},
  seealso = {concrete-state,symbolic-state}
}
