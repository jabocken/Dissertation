%% Shared types
@index{state}
@index{memory}
@index{lattice}

@symbol{equiv,
  name = {\ensuremath\equiv},
  description = {Indicates term equivalence; the term on the left may be replaced by the term on the right}
}

% Memory relations
@symbol{separate,
  name = {\ensuremath\bowtie},
  description = {Indicates the two memory region arguments are separate},
  parent = {memory}
}
@symbol{enclosed,
  name = {\ensuremath\preceq},
  description = {Indicates the first memory region argument is enclosed in the second},
  parent = {memory}
}
@symbol{encloses,
  name = {\ensuremath\succeq},
  description = {Reverse of \glssymbol{enclosed}},
  see = {enclosed},
  parent = {memory}
}
@symbol{compatible,
  name = {\ensuremath\cong},
  description = {Indicates the two memory model arguments are compatible},
  parent = {memory}
}
@symbol{comparable,
  name = {\ensuremath{\mathrel{\mathbf{C}}}},
  description = {Indicates the two memory model arguments are comparable},
  parent = {memory}
}

%% FROM PLDI 2022 (Hoare Graph) paper
@symbol{holds,
  name = {\ensuremath\vdash},
  description = {Indicates the predicate on the \ac{rhs} holds in the state on the \ac{lhs}},
  parent = {state}
}
@symbol{join,
  name = {\ensuremath\sqcup},
  description = {The join of two states, predicates, or memory models},
  parent = {lattice}
}
@symbol{order,
  name = {\ensuremath\sqsubseteq},
  description = {Partial ordering over symbolic states for \ac{hg} work where the \ac{lhs} is ``less abstract'' than the \ac{rhs}},
  parent = {lattice},
  seealso = {abs-state}
}
@symbol{defeq,
  name = {\ensuremath{\stackrel{\text{def}}{=}}},
  description = {For \acp{hg}, used in place of \glssymbol{equiv} as that symbol is used to indicate aliasing instead},
  seealso = {alias,equiv}
}
@symbol{alias,
  name = {\ensuremath\equiv},
  description = {For \acp{hg}, indicates the two memory region arguments alias},
  parent = {memory}
}
@symbol{pluseq,
  name = {\ensuremath{\mathrel{+}=}},
  description = {In-place addition}
}
@symbol{black-box-transition,
  name = {\ensuremath{\rightarrow_B}},
  description = {A deterministic black-box transition relation over concrete states for \acp{hg}},
  parent = {state},
  seealso = {concrete-state}
}
@symbol{symbolic-transition,
  name = {\ensuremath{\rightarrow_\Sigma}},
  description = {A nondeterministic transition relation over symbolic states for \acp{hg}},
  parent = {state},
  seealso = {symbolic-state}
}
